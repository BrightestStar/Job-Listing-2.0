<h1><%= @job.title %></h1>
<%= simple_form_for @job do |f| %>
<div class="group">
  <h3><%= simple_format(@job.description) %></h3>
</div>
<div class="pull-right">
  <%= link_to 'Back', jobs_path, class: "btn btn-default" %>
</div>
<div class="group">
  <h4><%= f.label :薪资范围 %>:
    <br>
    <%= @job.wage_lower_bound %>
    -
    <%=  @job.wage_upper_bound %>
    <h4></div>
    <div class="group">
      <h4><%= f.label :联系邮件 %>：
        <br>
        <%= @job.contact_email %>
        <h4></div>
        <% end %>
        <hr>

        <div class="resumes">
          <%= render "admin/resumes/resumes" %>
        </div>
